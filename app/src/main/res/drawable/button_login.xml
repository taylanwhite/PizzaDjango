<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="25dip" android:color="#9E9E9E" />
            <gradient android:angle="-90" android:startColor="#9E9E9E" android:endColor="#9E9E9E"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="25dip" android:color="#5e7974" />
            <solid android:color="#9E9E9E"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="25dip" android:color="#9E9E9E" />
            <gradient android:angle="-90" android:startColor="#9E9E9E" android:endColor="#C0C0C0" />
        </shape>
    </item>
</selector>